<VirtualHost <%= @vhost_name %>:<%= @port %>>
	ServerName <%= @server_name %> 
	DocumentRoot /var/www/html/<%= @server_name %> 
	CustomLog	"/var/log/httpd/<%= @server_name %>_access.log" combined
	ErrorLog	"/var/log/httpd/<%= @server_name %>_errori.log"
	<% if @doc_root %>
	<Directory /var/www/html/<%= @doc_root %>>
		AllowOverride none

		Order Allow,Deny
		Allow from all
	</Directory>
	<% end %>
</VirtualHost>
